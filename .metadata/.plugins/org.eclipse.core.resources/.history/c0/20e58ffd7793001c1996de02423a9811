package br.fai.ex01;

public class Main {

	public static void main(String[] args) {

		Main app = new Main();
		app.start();

	}

	private void start () {
		int idade = 15;
		System.out.printf("A idade eh de @i anos", idade);
		idade+=5;
		idade*=2;
		System.out.printf("Resultado 1: @i \n", idade);
		idade-=5;
		System.out.printf("Resultado 2: @i ", idade);
		if (idade>20) {
			System.out.printf("Idade maior que 20 ");
		}
		else System.out.printf("Idade maior que 20 ");
	}
}
